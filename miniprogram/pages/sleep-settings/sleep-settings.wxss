/* sleep-settings.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 32rpx;
  display: block;
}

.target-setting {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-label {
  font-size: 28rpx;
  color: #666666;
}

.target-controls {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.target-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.target-unit {
  font-size: 28rpx;
  color: #666666;
}

.time-setting {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time-label {
  font-size: 28rpx;
  color: #666666;
}

.time-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.checkbox-wrapper {
  margin-top: 32rpx;
}

.tip-card {
  background: #E6F4FF;
  border: 1rpx solid #B3D8FF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  gap: 16rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0052D9;
}

.tip-text {
  font-size: 28rpx;
  color: #0052D9;
  line-height: 1.6;
}

.save-wrapper {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
}

