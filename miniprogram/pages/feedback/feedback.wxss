/* feedback.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* 统计卡片 */
.stats-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.stats-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #0052D9;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value.pending {
  color: #FA8C16;
}

.stat-value.processed {
  color: #00A870;
}

.stat-label {
  font-size: 22rpx;
  color: #999999;
}

.form-section {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #F5222D;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.category-item {
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s;
}

.category-item.selected {
  border-width: 4rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
  text-align: right;
}

.submit-wrapper {
  margin-bottom: 32rpx;
}

.section {
  margin-top: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 24rpx;
  display: block;
}

.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feedback-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.feedback-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.category-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.feedback-date {
  font-size: 24rpx;
  color: #999999;
}

.feedback-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.feedback-status.processed {
  color: #00A870;
}

.feedback-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.feedback-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #999999;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.feedback-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.action-btn.delete:active {
  background: #fff1f0;
  color: #F5222D;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 64rpx 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-top: 32rpx;
}

.empty-icon {
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #cccccc;
}

/* 加载中 */
.loading-state {
  text-align: center;
  padding: 64rpx 32rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
  display: block;
}

/* 提示说明 */
.tips-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 12rpx 0;
}

.tip-item:last-child {
  padding-bottom: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

/* 输入框样式 */
.textarea-wrapper {
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.textarea-wrapper.has-content {
  border-color: #0052D9;
}

.description-input {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.input-wrapper {
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.input-wrapper.has-content {
  border-color: #0052D9;
}

.contact-input {
  width: 100%;
  font-size: 28rpx;
  color: #333333;
}

/* 图片上传 */
.image-upload-section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.image-preview {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-item.add-image {
  background: #f5f5f5;
  border: 2rpx dashed #e0e0e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-text {
  font-size: 22rpx;
  color: #999999;
  margin-top: 8rpx;
}
