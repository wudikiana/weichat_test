.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.picker {
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  color: #666;
  font-size: 24rpx;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.button {
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.2s;
}

.button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.button[disabled] {
  opacity: 0.5;
  pointer-events: none;
}

.button-primary {
  background-color: #07c160;
  color: white;
}

.button-secondary {
  background-color: #1989fa;
  color: white;
}

.button-warning {
  background-color: #ff976a;
  color: white;
}

.button-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.status {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.status-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-value {
  font-size: 28rpx;
  margin-left: 10rpx;
  flex: 1;
}

.status-value.success {
  color: #07c160;
  font-weight: 500;
}

.status-value.error {
  color: #ee0a24;
  font-weight: 500;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.log-actions {
  display: flex;
  gap: 10rpx;
}

.log-container {
  height: 400rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  overflow: hidden;
}

.log-scroll {
  height: 100%;
}

.log-list {
  padding: 20rpx;
}

.log-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.log-message {
  font-size: 26rpx;
  color: #333;
}

.empty-log {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

.footer {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.footer-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.footer-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}