/* bluetooth.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
}

.device-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.device-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.device-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  background: #E6F4FF;
  color: #0052D9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.device-icon.gray {
  background: #f5f5f5;
  color: #999999;
}

.device-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.device-status {
  font-size: 24rpx;
  color: #999999;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #cccccc;
}

.status-dot.connected {
  background: #00A870;
}

.status-text {
  font-size: 24rpx;
  color: #999999;
}

.device-actions {
  display: flex;
  gap: 24rpx;
}

.device-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.history-status {
  font-size: 24rpx;
  color: #999999;
}

