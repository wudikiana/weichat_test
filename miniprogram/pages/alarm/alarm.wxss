/* alarm.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

.alarm-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.alarm-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.alarm-item.disabled {
  opacity: 0.6;
}

.alarm-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.alarm-time-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.alarm-time {
  font-size: 64rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.alarm-repeat {
  font-size: 28rpx;
  color: #999999;
}

.alarm-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}

.alarm-type {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.alarm-actions {
  display: flex;
  gap: 32rpx;
}

.action-btn {
  color: #0052D9;
  font-size: 28rpx;
}

.action-btn.delete {
  color: #E34D59;
}

.alarm-note {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
  display: block;
}

.tip-section {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 32rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: block;
}

.tip-item {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  display: block;
  margin-bottom: 8rpx;
}

.fab-wrapper {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
}

