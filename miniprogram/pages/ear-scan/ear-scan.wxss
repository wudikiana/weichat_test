/* ear-scan.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.tip-card {
  background: #E6F4FF;
  border: 1rpx solid #B3D8FF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  gap: 16rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0052D9;
  margin-bottom: 8rpx;
}

.tip-item {
  font-size: 28rpx;
  color: #0052D9;
  line-height: 1.6;
}

.scan-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.scan-preview {
  width: 100%;
  aspect-ratio: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.guide-frame {
  position: absolute;
  width: 384rpx;
  height: 512rpx;
  border: 8rpx dashed #0052D9;
  border-radius: 16rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.placeholder-icon {
  z-index: 1;
}

.scan-hint {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
  display: block;
}

.scan-actions {
  display: flex;
  gap: 24rpx;
}

.angle-suggestions {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 24rpx;
  display: block;
}

.angle-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.angle-item {
  text-align: center;
}

.angle-preview {
  width: 100%;
  aspect-ratio: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.angle-label {
  font-size: 24rpx;
  color: #666666;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.more-link {
  font-size: 28rpx;
  color: #0052D9;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.history-image {
  width: 128rpx;
  height: 128rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.history-result {
  font-size: 28rpx;
  color: #999999;
}

.history-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.view-detail {
  font-size: 24rpx;
  color: #0052D9;
}

