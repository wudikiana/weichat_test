/* alarm-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 表单区域 */
.form-wrapper {
  padding-bottom: 40rpx;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 时间选择器 */
.time-picker-wrapper {
  margin-top: 10rpx;
}

.time-display {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e4e6eb;
}

.time-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #0052D9;
  margin: 0 20rpx;
}

.time-hint {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

/* 预设标签 */
.preset-labels {
  margin-top: 20rpx;
}

.preset-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.label-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.label-tag {
  padding: 12rpx 24rpx;
  background: #f0f5ff;
  border: 1rpx solid #d0e3ff;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #0052D9;
  transition: all 0.2s;
}

.label-tag:active {
  background: #d0e3ff;
  transform: scale(0.98);
}

/* 星期选择 */
.day-checkboxes {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.repeat-summary {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 铃声描述 */
.sound-description {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 其他设置 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
  flex-direction: column;
  align-items: flex-start;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .day-checkboxes {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .time-text {
    font-size: 40rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeIn 0.3s ease-out;
}

.form-section:nth-child(1) { animation-delay: 0.1s; }
.form-section:nth-child(2) { animation-delay: 0.2s; }
.form-section:nth-child(3) { animation-delay: 0.3s; }
.form-section:nth-child(4) { animation-delay: 0.4s; }
.form-section:nth-child(5) { animation-delay: 0.5s; }

/* 铃声单选按钮样式 */
.radio-options {
  margin: 16rpx 0;
}

.sound-radio {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.sound-radio:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

/* 调整单选按钮标签样式 */
.sound-radio .t-radio__label {
  font-size: 32rpx;
  color: #333;
}

/* 选中状态的样式 */
.sound-radio .t-radio__icon--checked {
  color: #0052D9;
}

/* 铃声描述样式优化 */
.sound-description {
  margin-top: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 唤醒方法单选按钮样式 */
.wake-method-radio {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.wake-method-radio:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

/* 方法描述样式 */
.method-description {
  margin-top: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 组合预览样式 */
.combination-preview {
  margin-top: 30rpx;
  padding: 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  text-align: center;
}

.combination-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.combination-desc {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 动画延迟调整 */
.form-section:nth-child(5) { animation-delay: 0.5s; }
.form-section:nth-child(6) { animation-delay: 0.6s; }
