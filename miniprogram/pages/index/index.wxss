/* index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-section {
  background: linear-gradient(135deg, #0052D9 0%, #1890FF 100%);
  padding: 60rpx 32rpx 40rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting {
  font-size: 24rpx;
  opacity: 0.9;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
}

.function-cards {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.card-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.12);
}

.card-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-icon.sleep {
  background-color: #E6F4FF;
  color: #0052D9;
}

.card-icon.consultation {
  background-color: #E6F9F0;
  color: #00A870;
}

.card-icon.scan {
  background-color: #F0E6FF;
  color: #8B5CF6;
}

.card-icon.location {
  background-color: #FFF4E6;
  color: #ED7B2F;
}

.card-icon.profile {
  background-color: #E6E9FF;
  color: #6366F1;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.card-desc {
  font-size: 24rpx;
  color: #999999;
}
