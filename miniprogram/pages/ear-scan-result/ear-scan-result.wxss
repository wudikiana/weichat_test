/* ear-scan-result.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.result-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
}

.result-icon.success {
  background: #E6F9F0;
  color: #00A870;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: block;
}

.result-status {
  font-size: 36rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.status-text.success {
  color: #00A870;
  font-weight: 600;
}

.result-time {
  font-size: 28rpx;
  color: #999999;
}

.images-section {
  margin-bottom: 32rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  display: block;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.image-item {
  width: 100%;
  aspect-ratio: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.analysis-section {
  margin-bottom: 32rpx;
}

.structure-list {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.structure-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.structure-name {
  font-size: 28rpx;
  color: #666666;
}

.abnormal-box {
  background: #E6F4FF;
  border: 1rpx solid #B3D8FF;
  border-radius: 16rpx;
  padding: 24rpx;
}

.abnormal-box text {
  font-size: 28rpx;
  color: #0052D9;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  display: block;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-item {
  font-size: 28rpx;
  color: #1a1a1a;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.trend-text.success {
  color: #00A870;
  font-weight: 600;
}

