/* sleep-plan.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.sleep-target-card {
  background: linear-gradient(135deg, #0052D9 0%, #1890FF 100%);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  color: #ffffff;
  margin-bottom: 32rpx;
}

.target-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  display: block;
}

.target-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 32rpx;
}

.target-left {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.target-hours {
  font-size: 80rpx;
  font-weight: bold;
}

.target-unit {
  font-size: 24rpx;
  opacity: 0.9;
}

.target-right {
  text-align: right;
}

.target-label-small {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 8rpx;
}

.target-time {
  font-size: 48rpx;
  font-weight: 600;
}

.target-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.target-time-small {
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 8rpx;
  display: block;
}

.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.action-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon.alarm {
  background: #FFF4E6;
  color: #ED7B2F;
}

.action-icon.statistics {
  background: #F0E6FF;
  color: #8B5CF6;
}

.action-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.action-desc {
  font-size: 24rpx;
  color: #999999;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 32rpx;
  display: block;
}

.chart-container {
  margin-bottom: 32rpx;
}

.chart-bars {
  height: 256rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.chart-bar {
  flex: 1;
  display: flex;
  align-items: flex-end;
}

.bar {
  width: 100%;
  background: #E6F4FF;
  border-radius: 8rpx 8rpx 0 0;
  min-height: 20rpx;
}

.bar.active {
  background: #0052D9;
}

.chart-labels {
  display: flex;
  justify-content: space-between;
  gap: 8rpx;
}

.chart-label {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.chart-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-label {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.footer-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.suggestion-card {
  background: #E6F4FF;
  border: 1rpx solid #B3D8FF;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0052D9;
}

.suggestion-text {
  font-size: 28rpx;
  color: #0052D9;
  line-height: 1.6;
}

