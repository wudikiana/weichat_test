/* health-assessment.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.start-btn-wrapper {
  margin-bottom: 32rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 24rpx;
  display: block;
}

.result-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.result-label {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
}

.result-date {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
}

.result-score {
  text-align: right;
}

.score-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #0052D9;
}

.score-unit {
  font-size: 24rpx;
  color: #999999;
}

.score-details {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.score-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.score-name {
  color: #666666;
}

.score-point {
  color: #1a1a1a;
  font-weight: 600;
}

.suggestion-box {
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: block;
}

.suggestion-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.chart-container {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.chart-bars {
  height: 384rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 8rpx;
  margin-bottom: 32rpx;
}

.chart-bar {
  flex: 1;
  display: flex;
  align-items: flex-end;
}

.bar {
  width: 100%;
  background: #E6F4FF;
  border-radius: 8rpx 8rpx 0 0;
  min-height: 20rpx;
}

.bar.active {
  background: #0052D9;
}

.chart-label {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  display: block;
}

