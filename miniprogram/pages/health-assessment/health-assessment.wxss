/* health-assessment.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 选择量表页面 */
.scale-selection {
  padding: 32rpx;
}

.scale-header {
  margin-bottom: 48rpx;
}

.scale-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.scale-subtitle {
  font-size: 28rpx;
  color: #999999;
}

/* 统计卡片 */
.stats-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.stats-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #0052D9;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value.good {
  color: #00A870;
}

.stat-value.warning {
  color: #F5222D;
}

.stat-label {
  font-size: 22rpx;
  color: #999999;
}

.stats-actions {
  text-align: center;
}

.scale-options {
  margin-bottom: 32rpx;
}

.scale-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.scale-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.scale-info {
  flex: 1;
}

.scale-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.scale-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 综合测评 */
.both-scales {
  background: linear-gradient(135deg, #0052D9 0%, #1890FF 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.both-scales-icon {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.both-scales-info {
  flex: 1;
}

.both-scales-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.both-scales-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 历史记录 */
.section {
  margin-top: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
}

.history-list {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.history-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.history-left {
  flex: 1;
}

.history-date {
  font-size: 28rpx;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.history-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag.sas {
  background: #FFF7E6;
  color: #FA8C16;
}

.tag.sds {
  background: #E6F4FF;
  color: #0052D9;
}

.history-right {
  text-align: right;
}

.history-status {
  font-size: 24rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.history-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #0052D9;
}

.history-actions {
  display: flex;
  gap: 12rpx;
}

/* 空状态 */
.empty-history {
  text-align: center;
  padding: 64rpx 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
}

.empty-icon {
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #cccccc;
}

/* 测评题目页面 */
.question-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.question-header {
  background: #ffffff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.question-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
}

.question-progress {
  font-size: 24rpx;
  color: #999999;
}

.question-list {
  flex: 1;
  padding: 24rpx 32rpx;
  padding-bottom: 160rpx;
}

.question-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

.option-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.option-item.selected {
  border-color: #0052D9;
  background: #E6F4FF;
}

.option-radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #cccccc;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.option-radio.checked {
  border-color: #0052D9;
  background: #0052D9;
}

.option-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ffffff;
}

.option-label {
  font-size: 26rpx;
  color: #666666;
}

.submit-btn-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 结果页面 */
.result-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.result-header {
  background: #ffffff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.result-card {
  margin: 24rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.result-status-section {
  text-align: center;
  margin-bottom: 16rpx;
}

.result-status-label {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.result-status-value {
  font-size: 48rpx;
  font-weight: bold;
}

.result-date {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

/* 分数表格 */
.score-table {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.score-table-header {
  display: flex;
  background: #f5f5f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.score-table-row {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
}

.score-table-row:last-child {
  border-bottom: none;
}

.score-table-row.total {
  background: #E6F4FF;
}

.table-cell {
  flex: 1;
  padding: 16rpx 8rpx;
  font-size: 22rpx;
  text-align: center;
  border-right: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.table-cell:last-child {
  border-right: none;
}

.table-cell.header {
  font-weight: 600;
  color: #333333;
}

.table-cell.score {
  font-weight: 600;
  color: #0052D9;
}

.table-cell.score.total {
  font-size: 28rpx;
}

.table-cell.range {
  color: #999999;
}

.table-cell.result {
  font-weight: 500;
}

/* 建议 */
.suggestion-section {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.suggestion-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.suggestion-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.result-actions {
  padding: 24rpx 32rpx;
}
