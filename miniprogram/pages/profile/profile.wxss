/* profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 登录界面样式 */
.login-section {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 32rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 80rpx 60rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.login-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.login-btn {
  width: 100%;
}

.guest-btn {
  width: 100%;
}

/* 已登录状态样式 */
.header-section {
  background: linear-gradient(135deg, #0052D9 0%, #1890FF 100%);
  padding: 60rpx 32rpx 40rpx;
  color: #ffffff;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.username {
  font-size: 40rpx;
  font-weight: 600;
}

.user-detail {
  font-size: 24rpx;
  opacity: 0.9;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.health-overview {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 32rpx;
}

.overview-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  display: block;
}

.overview-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.overview-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.overview-status {
  font-size: 40rpx;
  font-weight: bold;
}

.overview-date {
  font-size: 20rpx;
  opacity: 0.8;
}

.overview-right {
  text-align: right;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  gap: 16rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.score-label {
  font-size: 20rpx;
  opacity: 0.8;
}

.score-value-small {
  font-size: 28rpx;
  font-weight: 600;
}

.score-divider {
  width: 1px;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.3);
  align-self: center;
}

.total-score {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.total-score .score-label {
  font-size: 20rpx;
  opacity: 0.8;
}

.total-score .score-value {
  font-size: 48rpx;
  font-weight: bold;
}

.function-list {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

.cell-note {
  color: #999999;
  font-size: 24rpx;
}

.logout-section {
  margin-top: 32rpx;
  padding-bottom: 32rpx;
}
