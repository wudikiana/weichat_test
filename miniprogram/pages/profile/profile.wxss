/* profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-section {
  background: linear-gradient(135deg, #0052D9 0%, #1890FF 100%);
  padding: 60rpx 32rpx 40rpx;
  color: #ffffff;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.username {
  font-size: 40rpx;
  font-weight: 600;
}

.user-detail {
  font-size: 28rpx;
  opacity: 0.9;
}

.health-overview {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 32rpx;
}

.overview-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  display: block;
}

.overview-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.overview-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.overview-status {
  font-size: 48rpx;
  font-weight: bold;
}

.overview-date {
  font-size: 20rpx;
  opacity: 0.8;
}

.overview-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.overview-label-small {
  font-size: 24rpx;
  opacity: 0.9;
}

.overview-score {
  font-size: 40rpx;
  font-weight: 600;
}

.function-list {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

.cell-note {
  color: #999999;
  font-size: 24rpx;
}

