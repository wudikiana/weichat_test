/* profile-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.avatar-section {
  background: #ffffff;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

.avatar-edit-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #0052D9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #ffffff;
}

.input-with-unit {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.unit {
  font-size: 28rpx;
  color: #999999;
  min-width: 40rpx;
}

.save-btn-wrapper {
  padding: 32rpx;
  margin-top: 32rpx;
}

.bmi-info {
  margin: 32rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
}

.bmi-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.bmi-table {
  border: 1rpx solid #eeeeee;
  border-radius: 8rpx;
  overflow: hidden;
}

.bmi-row {
  display: flex;
  border-bottom: 1rpx solid #eeeeee;
}

.bmi-row:last-child {
  border-bottom: none;
}

.bmi-row.header {
  background: #f5f5f5;
}

.bmi-cell {
  flex: 1;
  padding: 16rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  border-right: 1rpx solid #eeeeee;
}

.bmi-cell:last-child {
  border-right: none;
}

.bmi-row.header .bmi-cell {
  font-weight: 600;
  color: #333333;
}
