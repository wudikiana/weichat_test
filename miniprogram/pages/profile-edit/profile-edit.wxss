/* profile-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.avatar-section {
  background: #ffffff;
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
}

.avatar-wrapper {
  position: relative;
}

.avatar-edit-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #0052D9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #ffffff;
}

.save-btn-wrapper {
  padding: 32rpx;
  margin-top: 32rpx;
}

