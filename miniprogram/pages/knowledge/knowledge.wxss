/* knowledge.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.filter-tabs {
  background: #ffffff;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-wrapper {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.article-item {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.article-image {
  width: 192rpx;
  height: 192rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.article-content {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.article-desc {
  font-size: 24rpx;
  color: #999999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.section {
  margin-top: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 24rpx;
  display: block;
}

.faq-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.faq-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.faq-question {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: block;
}

.faq-answer {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

