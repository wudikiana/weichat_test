<!--health-consultation.wxml-->
<view class="container">
  <!-- 功能入口 -->
  <view class="function-entries">
    <view class="entry-card doctors" bind:tap="navigateToDoctors">
      <view class="entry-icon">
        <t-icon name="user-group" size="24px" />
      </view>
      <text class="entry-title">医院医生</text>
      <text class="entry-desc">在线咨询与预约</text>
    </view>
    <view class="entry-card knowledge" bind:tap="navigateToKnowledge">
      <view class="entry-icon">
        <t-icon name="file-text" size="24px" />
      </view>
      <text class="entry-title">健康知识库</text>
      <text class="entry-desc">专业健康知识</text>
    </view>
  </view>

  <!-- 快速咨询 -->
  <view class="section">
    <text class="section-title">快速咨询</text>
    <view class="quick-consult-card">
      <view class="consult-info">
        <view class="consult-avatar">
          <t-icon name="chat" size="32px" />
        </view>
        <view class="consult-details">
          <text class="consult-title">在线客服</text>
          <text class="consult-desc">7x24小时在线，随时为您解答疑问</text>
        </view>
      </view>
      <t-button theme="primary" size="small" bind:tap="startConsult">立即咨询</t-button>
    </view>
  </view>

  <!-- 推荐医生 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">推荐医生</text>
      <text class="more-link" bind:tap="navigateToDoctors">查看更多</text>
    </view>
    <view class="doctor-list">
      <view class="doctor-card" wx:for="{{recommendedDoctors}}" wx:key="id" bind:tap="viewDoctor" data-id="{{item.id}}">
        <t-avatar size="large" image="{{item.avatar || '/assets/images/default-avatar.png'}}" />
        <view class="doctor-info">
          <view class="doctor-header">
            <text class="doctor-name">{{item.name}}</text>
            <view class="doctor-rating">
              <t-icon name="star-filled" size="16px" color="#FFA500" />
              <text class="rating-score">{{item.rating}}</text>
            </view>
          </view>
          <text class="doctor-title">{{item.title}}</text>
          <text class="doctor-desc">{{item.description}}</text>
          <view class="doctor-actions">
            <t-button theme="primary" size="small" bind:tap="consultDoctor" data-id="{{item.id}}" catch:tap="stopPropagation">立即咨询</t-button>
            <t-button theme="default" size="small" bind:tap="bookDoctor" data-id="{{item.id}}" catch:tap="stopPropagation">预约挂号</t-button>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

