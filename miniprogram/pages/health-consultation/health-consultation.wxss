/* health-consultation.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

.function-entries {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.entry-card {
  background: linear-gradient(135deg, #0052D9 0%, #1890FF 100%);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.3);
}

.entry-card.knowledge {
  background: linear-gradient(135deg, #00A870 0%, #52C41A 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 168, 112, 0.3);
}

.entry-icon {
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.entry-title {
  font-size: 32rpx;
  font-weight: 600;
}

.entry-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
}

.more-link {
  font-size: 28rpx;
  color: #0052D9;
}

.quick-consult-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.consult-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.consult-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: #E6F4FF;
  color: #0052D9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.consult-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.consult-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.consult-desc {
  font-size: 24rpx;
  color: #999999;
}

.doctor-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.doctor-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.doctor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.doctor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.doctor-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.rating-score {
  font-size: 28rpx;
  color: #1a1a1a;
}

.doctor-title {
  font-size: 28rpx;
  color: #999999;
}

.doctor-desc {
  font-size: 24rpx;
  color: #666666;
  margin: 8rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.doctor-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

