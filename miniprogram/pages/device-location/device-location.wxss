/* device-location.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

.status-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.status-indicator {
  position: relative;
  width: 384rpx;
  height: 384rpx;
  margin: 0 auto 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pulse-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #E6F9F0;
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.pulse-ring.delay {
  width: 256rpx;
  height: 256rpx;
  background: #B3E6D1;
  animation-delay: 0.5s;
}

@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

.status-icon {
  position: relative;
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
  background: #00A870;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.status-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: block;
}

.status-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
  display: block;
}

.success-rate {
  display: inline-block;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  display: block;
}

.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feedback-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #E6F9F0;
  border: 1rpx solid #B3E6D1;
  border-radius: 16rpx;
}

.feedback-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #00A870;
}

.feedback-text {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
}

.slider-group {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.slider-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.slider-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.slider-value {
  font-size: 28rpx;
  color: #666666;
  text-align: right;
}

.guide-image {
  width: 100%;
  aspect-ratio: 16/9;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.step-item {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #0052D9;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value.success {
  color: #00A870;
}

.stat-value.warning {
  color: #8B5CF6;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.action-wrapper {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
}

